<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="135dp"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_card_item"
        android:layout_width="287dp"
        android:layout_height="125dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_gravity="center|start"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/img_home_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_card1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ttfirsneue_medium"
                    android:textColor="@color/black"
                    android:textIsSelectable="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/home_card1_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textIsSelectable="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/ttfirsneue_light"
                    android:textSize="14sp" />

                <RatingBar
                    android:id="@+id/rating_id"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-30dp"
                    android:indeterminate="false"
                    android:isIndicator="false"
                    android:isScrollContainer="false"
                    android:layout_gravity="bottom"
                    android:keepScreenOn="false"
                    android:numStars="5"
                    android:layout_marginEnd="25dp"
                    android:scaleX=".6"
                    android:scaleY=".5"
                    android:scrollbarSize="40sp"
                    android:theme="@style/MyRatingBar"
                    tools:ignore="RtlSymmetry" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#75212121"/>

                <TextView
                    android:id="@+id/home_card1_summa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:textColor="#405CBF"
                    android:fontFamily="@font/ttfirsneue_demibold"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>