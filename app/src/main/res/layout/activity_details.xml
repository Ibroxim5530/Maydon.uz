<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/det_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_arrow_back"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="170dp"
            android:layout_height="23dp"
            android:layout_centerInParent="true"
            android:fontFamily="@font/ttfirsneue_medium"
            android:gravity="center"
            android:text="Details"
            android:textColor="#171618"
            android:textSize="18sp" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="339dp"
        android:layout_height="183dp"
        android:layout_gravity="center"
        app:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/img_card_det"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/progress_det_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/progress_background" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/arena_name_det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/ttfirsneue_medium"
        android:gravity="center"
        android:textColor="#171618"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_suv" />

            <TextView
                android:id="@+id/check1_det"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/ttfirsneue_regular"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_kvadrat" />

            <TextView
                android:id="@+id/dimensions_det"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/ttfirsneue_regular"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/ttfirsneue_regular"
                android:text="5.0"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="#75212121" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ttfirsneue_medium"
            android:gravity="center"
            android:text="Free times"
            android:textColor="#171618"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/ttfirsneue_medium"
            android:gravity="center"
            android:text="Today, 31 january"
            android:textColor="#405CBF"
            android:textSize="16sp"
            app:drawableEndCompat="@drawable/ic_arrow_down" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/line_time1_off"
            android:layout_width="109dp"
            android:layout_height="35dp"
            android:background="@drawable/time_background"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/start_time_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#405CBF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#405CBF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/end_time_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#405CBF"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_time1_on"
            android:layout_width="109dp"
            android:layout_height="35dp"
            android:background="@drawable/time_background_on"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/start_time_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/end_time_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_time2_off"
            android:layout_width="109dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/time_background"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/start_time2_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#405CBF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#405CBF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/end_time2_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#405CBF"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_time2_on"
            android:layout_width="109dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/time_background_on"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/start_time2_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/end_time2_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/line_time3_off"
            android:layout_width="109dp"
            android:layout_height="35dp"
            android:background="@drawable/time_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/start_time3_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#405CBF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#405CBF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/end_time3_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#405CBF"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_time3_on"
            android:layout_width="109dp"
            android:layout_height="35dp"
            android:background="@drawable/time_background_on"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/start_time3_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/end_time3_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_time4_off"
            android:layout_width="109dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/time_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/start_time4_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#405CBF"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#405CBF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/end_time4_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#405CBF"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_time4_on"
            android:layout_width="109dp"
            android:layout_height="35dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/time_background_on"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/start_time4_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/end_time4_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tek_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/arena_summa_det"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="end|bottom"
            android:fontFamily="@font/ttfirsneue_medium"
            android:gravity="center"
            android:textColor="#405CBF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/det_btn"
            android:layout_width="169dp"
            android:layout_height="57dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35sp"
            android:background="@drawable/btn_radius"
            android:fontFamily="@font/andada"
            android:text="Book Now"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>


</LinearLayout>